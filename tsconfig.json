{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": ["jest"],
    },
    "include": [
        "**/*.ts",
    ],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts",  "**/*.mock.ts"],
}
